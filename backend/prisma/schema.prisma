// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  username  String   @unique
  password  String
  tasks     Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  description String
  title       String
  completed   Boolean  @default(false) // Added completed field with a default value of false
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
